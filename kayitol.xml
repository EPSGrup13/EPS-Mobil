<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bground">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="531dp"
        android:layout_height="294dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="-44dp"
        tools:layout_editor_absoluteY="-62dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Kullanıcı Adı"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="233dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="302dp"
        tools:text="password" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="371dp"
        tools:text="E-mail" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="İsim"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="440dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Soyisim"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="502dp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="562dp"
        tools:text="Telefon Numarası" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="619dp"
        tools:text="Kullanıcı" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otopark İşletmesi"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="619dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#f3d043"
        android:text="Geri Dön"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="102dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#f3d043"
        android:textStyle="bold"
        android:text="Üye Ol"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="224dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
